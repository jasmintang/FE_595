
## Make a request to "theyfightcrime.org"

from requests import get
from pprint import pprint
import re
resp = get("https://www.theyfightcrime.org")
resp.text
pprint(resp.text)

## Extract the two fictional characters generated by the website.
stringtext = repr(resp)
Helvetica = re.match("(Helve\w+)\W(Helve\w+)", stringtext)
Verdana = re.match("(Verda\w+)\W(Verda\w+)", stringtext)

## Write the characters to separate text files.

He = resp.text.split("Helvetica")
pprint(He)
she =resp.text.split("Verdana")
pprint(she)


## Repeat this 50 times so you will end up with a file full of male characters and a file full of female characters.
male = open("male.txt", 'a+')
female = open("female.txt", 'a+')
for i in range(50): 
    resp = get("https://www.theyfightcrime.org/")
    text = resp.text.split("</P>")
    him = re.findall(r"<P>(.*(?=She))", text[1])  
    him_ = " ".join(him)
    male.write(str(i+1)+":"+him_+'\n')
    her = re.findall(r"(She.*(?=They))", text[1])   
    her_ = " ".join(her)
    female.write(str(i+1)+":"+her_+'\n')

male.close()
female.close()
